# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Get these from: https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=eyJxxx...

# Server-side only (NEVER expose in frontend)
SUPABASE_SERVICE_ROLE_KEY=eyJxxx...


# ====================================
# OPENAI API (Server-side only)
# ====================================
# Get from: https://platform.openai.com/api-keys
# Used for: Whisper transcription + GPT-4 analysis

OPENAI_API_KEY=sk-...


# ====================================
# SALESFORCE INTEGRATION
# ====================================
# Get from: Salesforce Setup > App Manager > Create Connected App
# Server-side only

SALESFORCE_CLIENT_ID=3MVG9...
SALESFORCE_CLIENT_SECRET=xxxx...
SALESFORCE_REDIRECT_URI=https://yourapp.com/oauth/salesforce
SALESFORCE_SANDBOX=true  # Set to false for production


# ====================================
# HUBSPOT INTEGRATION
# ====================================
# Get from: HubSpot > Settings > Integrations > Private Apps
# Server-side only

HUBSPOT_CLIENT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
HUBSPOT_CLIENT_SECRET=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
HUBSPOT_REDIRECT_URI=https://yourapp.com/oauth/hubspot


# ====================================
# PIPEDRIVE INTEGRATION
# ====================================
# Get from: Pipedrive > Settings > API
# Server-side only

PIPEDRIVE_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PIPEDRIVE_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PIPEDRIVE_REDIRECT_URI=https://yourapp.com/oauth/pipedrive


# ====================================
# FEATURE FLAGS
# ====================================

# Enable offline recording mode
VITE_ENABLE_OFFLINE_MODE=true

# Maximum recording duration in milliseconds (5 minutes = 300000)
VITE_MAX_RECORDING_DURATION=300000

# Auto-sync to CRM after transcription
VITE_AUTO_SYNC_TO_CRM=true

# Show AI confidence scores in UI
VITE_SHOW_CONFIDENCE_SCORES=true

# Enable analytics and error tracking
VITE_ENABLE_ANALYTICS=false


# ====================================
# ENVIRONMENT
# ====================================

# Current environment: development | staging | production
NODE_ENV=development

# API base URL (for Supabase Edge Functions)
VITE_API_BASE_URL=https://xxxxx.supabase.co/functions/v1


# ====================================
# OPTIONAL: THIRD-PARTY SERVICES
# ====================================

# Error tracking (Sentry)
VITE_SENTRY_DSN=

# Analytics (PostHog, Mixpanel, etc.)
VITE_ANALYTICS_KEY=


# ====================================
# NOTES
# ====================================
# 
# 1. Copy this file to .env.local and fill in real values
# 2. NEVER commit .env.local to git
# 3. Variables with VITE_ prefix are exposed to frontend
# 4. Variables without VITE_ are server-side only
# 5. Use Vercel dashboard to set production environment variables
#
